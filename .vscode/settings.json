{
  // Configurações do Python Language Server
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.importFormat": "absolute",
  "python.analysis.inlayHints.callArgumentNames": "partial",
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.languageServerMode": "default",
  "python.analysis.typeCheckingMode": "standard",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.terminal.activateEnvironment": true,
  "python.terminal.focusAfterLaunch": true,
  "python.terminal.shellIntegration.enabled": true,
  "python.useEnvironmentsExtension": true,
  // Ruff como linter e formatter
  "ruff.configurationPreference": "filesystemFirst",
  "ruff.enable": true,
  "ruff.fixAll": true,
  "ruff.organizeImports": true,
  // Configurações do editor para Python
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
  },
  // Configurações para Jupyter
  "jupyter.askForKernelRestart": false,
  "jupyter.widgetScriptSources": [
    "jsdelivr.com",
    "unpkg.com"
  ],
  "notebook.formatOnSave.enabled": true,
  "notebook.codeActionsOnSave": {
    "notebook.source.fixAll": "explicit",
    "notebook.source.organizeImports": "explicit"
  },
  "notebook.lineNumbers": "on",
  // Configurações de arquivos
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/.ipynb_checkpoints": true
  },
  "files.encoding": "utf8",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.eol": "\n",
  // Melhorias de produtividade
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.aiStats.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.formatOnPaste": false,
  "editor.guides.bracketPairs": true,
  "editor.hover.enabled": true,
  "editor.snippetSuggestions": "top",
  "editor.suggestSelection": "first",
  // Configurações do chat
  "chat.agent.enabled": true,
  "chat.agent.maxRequests": 100,
  "chat.checkpoints.enabled": true,
  "chat.commandCenter.enabled": true,
  "chat.extensionTools.enabled": true,
  "chat.instructionsFilesLocations": {
    ".vscode/copilot/instructions": true
  },
  "chat.math.enabled": true,
  "chat.mcp.autostart": "newAndOutdated",
  "chat.mcp.discovery.enabled": true,
  "chat.mcp.enabled": true,
  "chat.promptFilesLocations": {
    ".vscode/copilot/prompts": true
  },
  "chat.sendElementsToChat.enabled": true,
  "chat.todoListTool.enabled": true,
  "chat.tools.useTreePicker": true,
  "github.copilot.advanced": {
    "useLanguageServer": true
  },
  "github.copilot.chat.agent.autoFix": true,
  "github.copilot.chat.agent.runTasks": true,
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.reviewSelection.enabled": true,
  "github.copilot.chat.summarizeAgentConversationHistory.enabled": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.nextEditSuggestions.fixes": true,
}
